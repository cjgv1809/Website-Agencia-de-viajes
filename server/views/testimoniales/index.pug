extends ../layout/index.pug
block contenido
    main.container.mt-5
       h1.text-center.mb-5 #{pagina}

       .row
            .col-md-12
                include ../layout/partials/testimoniales
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje

                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value=nombre)
                            .form-group
                                label(for="email") Email
                                input(id="email", type="email", placeholder="Tu email", name="email", class="form-control", value=email)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="3", class="form-control", placeholder="Tu mensaje")=mensaje
                            input(type="submit", class="btn btn-block btn-success", value="Agregar")
                            